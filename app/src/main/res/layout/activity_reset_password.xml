<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/rlContent3"
    tools:context="activity.ResetPasswordActivity">

    <TextView
        android:id="@+id/txtEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/enter_the_received_otp_below"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEnter"
        android:layout_margin="10dp"
        android:background="@drawable/text_boundary_background"
        android:hint="OTP(4 characters)"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="number"
        android:textSize="16sp"
        android:maxLines="1"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etPassword3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etOTP"
        android:hint="New Password"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPassword"
        android:background="@drawable/text_boundary_background"
        android:textSize="16sp"
        android:maxLines="1"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etConfirmPassword3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword3"
        android:hint="Confirm Password"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPassword"
        android:background="@drawable/text_boundary_background"
        android:textSize="16sp"
        android:maxLines="1"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_below="@id/etConfirmPassword3"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Submit"
        android:layout_marginHorizontal="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>